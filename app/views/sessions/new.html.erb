<div class="snipy">
  <div class="container">
    <div class="container text-center">
      <%= form_tag sessions_path, :class=>"form-signin" do %>
          <h2 class="form-signin-heading">Sign in</h2>

          <small class="text-muted">Connect Snipy with your favorite social network</small>
          <br><br>

          <p>
            <a class="btn btn-primary social-login-btn social-facebook" href="/auth/facebook"><i class="fa fa-facebook"></i></a>
            <a class="btn btn-primary social-login-btn social-twitter" href="/auth/twitter"><i class="fa fa-twitter"></i></a>
          </p>

          <p>
            <a class="btn btn-primary social-login-btn social-linkedin" href="/auth/linkedin"><i class="fa fa-linkedin"></i></a>
            <a class="btn btn-primary social-login-btn social-google-snipy" href="/auth/google"><i class="fa fa-google-plus"></i></a>
          </p>

          <small class="text-muted">Or sign in with Snipy</small>
          <br><br>

          <%= text_field_tag :email, params[:email], :class=>"form-control login-input", :placeholder=>"Email Address", :type=>"text", :required=>"true" %>
          <%= password_field_tag :password, nil, :class=>"form-control login-input-pass", :placeholder=>"Password", :type=>"password",:required=>"true" %>



          <%= submit_tag "Log In",:class=>"btn btn-lg btn-primary btn-center" %>

          <br><br>
          <small class="create-account text-muted">Dont have a Snipy or social network account?
            <%= link_to "Sign Up", new_user_path, :class=>"ember-view btn btn-sm btn-default" %>
          </small>

      <% end %>
    </div>
  </div>
</div>