<div class="snipy">
  <div class="col-lg-8">
    <div class="offer offer-success">
      <div class="shape">
        <div class="shape-text">
          Snipy
        </div>
      </div>
      <div class="offer-content">
        <%= form_for @snip, :url => {:action => "update",:id => @snip.id}, :html => {:id => "edit_snip_form"}  do |f| %>
                <%= f.text_area :snippet, class: "snippy-area", :rows=>15,
                                :place_holder=> "Create a Snip....", :name => "edit_form_snippet", :disabled => true %>
                <div class="pull-left text-success">
                  <%=flash.notice%>
                </div>
                <div class="pull-left text-danger">
                  <%=flash.alert%>
                </div>
                <div class="pull-right button-snipy">
                  <%= f.submit "Edit", class: "btn btn-primary", name:"edit" %>
                  <%= f.submit "Clear", class: "btn btn-primary", :type => "reset"%>
                </div>
            <%end%>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div id="user" class="offer offer-success">
      <div class="shape">
        <div class="shape-text">
          Snipes
        </div>
      </div>
      <div class="offer-content">
        <h3 class="lead">
          Welcome user
        </h3>
        <p>
          And a little description.
          <br> and so on the recent pasties.
        </p>
      </div>
    </div>
  </div>
</div>

<div class="col-lg-12 timeline-row">
  <%= render "layouts/timeline" %>
</div>