<div class="snipy">
  <div class="col-lg-8">
    <div class="offer offer-success">
      <div class="shape">
        <div class="shape-text">
          Snipy
        </div>
      </div>
      <div class="offer-content">
        <%= form_for @snip, class: "snip_form", :url => {:action => "create"} do |f| %>
                <%= f.text_field :title, class: "snippy-area", :place_holder => "Enter title.... " %>
                <%= f.text_area :snippet, class: "snippy-area", :rows=>15, :place_holder=> "Create a Snip...." %>
                <div class="pull-left text-success">
                  <%=flash.notice%>
                </div>
                <div class="pull-left text-danger">
                  <%=flash.alert%>
                </div>
                 <div class="pull-left text-danger">
                  <%=f.text_field :tag_list%>
                </div>
                <div class="pull-right button-snipy">
                  <%= f.select:category, options_for_select([['note'], ['snip']]),:prompt => "Select One" %>
                  <%= f.submit "Submit", class: "btn btn-primary" %>
                  <%= f.submit "Clear", class: "btn btn-primary", :type => "reset"%>
                </div>
            <%end%>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div id="user" class="offer offer-success">
      <div class="shape">
        <div class="shape-text">
          Snipes
        </div>
      </div>
      <div class="offer-content">
        <h3 class="lead">
          <% if current_user %>
              Logged in as <%= current_user.email %>
              <%= link_to "Log out", session_path("current"), method: "delete" %>
        </h3>
        <% else %>
              <%= link_to "Sign up", new_user_path %>
              <%= link_to "Log In", new_session_path %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="col-lg-12 timeline-row">
  <%= render "layouts/timeline" %>
</div>